<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/black_shade"
    app:layout_constraintHeight="wrap_content" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/idnewsimage"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idnewsheading"
            android:layout_below="@id/idnewsimage"
            android:textColor="@color/orange"
            android:text="headings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="3dp"
            android:maxLines="2"
            android:layout_margin="3dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idnewsheading"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:maxLines="3"
            android:text="sub heading"
            android:padding="3dp"
            android:id="@+id/idnewssubheading"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>